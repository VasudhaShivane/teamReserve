<div class="container mt-5">
  <h2 class="mb-4 text-center fw-bold" style="color: #6a1b9a;">ðŸ“… My Bookings</h2>

  <% if (!bookings || bookings.length === 0) { %>
    <div class="alert alert-light text-center shadow-sm border" style="background-color: #f3e5f5;">
      <strong>You have no bookings yet.</strong><br>
      Start reserving your favorite resources today! ðŸŒ¸
    </div>
  <% } else { %>
    <div class="table-responsive shadow rounded-4" style="background-color: #fef5ff; padding: 1rem;">
      <table class="table table-bordered align-middle table-hover">
        <thead class="text-white" style="background-color: #7b1fa2;">
          <tr class="text-center">
            <th>#</th>
            <th>Resource</th>
            <th>Type</th>
            <th>Date</th>
            <th>Time Slot</th>
            <th>Booked At</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((booking, index) => { %>
            <tr class="text-center">
              <td><%= index + 1 %></td>
              <td><strong><%= booking.resourceId?.name || 'N/A' %></strong></td>
              <td><%= booking.resourceId?.type || 'N/A' %></td>
              <td><%= booking.date %></td>
              <td><%= booking.timeSlot %></td>
              <td><%= new Date(booking.createdAt).toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>
