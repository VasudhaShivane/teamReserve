<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-4" style="background: #f8f4f9;">
        <div class="card-body p-5">

          <h2 class="mb-4 text-center fw-bold" style="color: #6a1b9a;">✏️ Edit Resource</h2>

          <form action="/resource/edit/<%= resource._id %>" method="POST">

            <div class="mb-3">
              <label for="name" class="form-label fw-semibold" style="color: #6a1b9a;">Resource Name</label>
              <input type="text" name="name" id="name" class="form-control border-purple" value="<%= resource.name %>" required>
            </div>

            <div class="mb-3">
              <label for="type" class="form-label fw-semibold" style="color: #6a1b9a;">Type</label>
              <input type="text" name="type" id="type" class="form-control border-purple" value="<%= resource.type %>" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label fw-semibold" style="color: #6a1b9a;">Description</label>
              <textarea name="description" id="description" class="form-control border-purple" rows="4"><%= resource.description %></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="/dashboard" class="btn btn-outline-secondary">Cancel</a>
              <button type="submit" class="btn text-white px-4" style="background-color: #8e24aa;">Update</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
