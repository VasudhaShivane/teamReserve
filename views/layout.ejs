<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TeamReserve</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #fffafc; /* Creamy-lavender background */
      color: #333;
    }

    .navbar-custom {
      background: linear-gradient(to right, #b39ddb, #9575cd, #ce93d8); /* Violet-Purple Gradient */
    }

    .navbar-custom .navbar-brand {
      font-weight: bold;
      color: #fff;
    }

    .navbar-custom .btn {
      border: 1px solid #fff;
    }

    .navbar-custom .btn:hover {
      background-color: #f3e5f5;
      color: #6a1b9a;
    }

    .nav-shadow {
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>

<!-- ðŸŒ¸ Beautiful Gradient Navbar -->
<nav class="navbar navbar-expand-lg navbar-custom nav-shadow">
  <div class="container">
    <a class="navbar-brand" href="/">TeamReserve</a>

    <div class="ms-auto d-flex gap-2">
      <% if (typeof userId !== 'undefined' && userId) { %>
        <a class="btn btn-outline-light btn-sm" href="/dashboard">Dashboard</a>
        <a class="btn btn-outline-light btn-sm" href="/resource">Add Resource</a>
        <a class="btn btn-outline-light btn-sm" href="/my-bookings">My Bookings</a>

        <% if (typeof session !== 'undefined' && session.isAdmin) { %>
          <a class="btn btn-warning btn-sm fw-semibold" href="/admin">Admin Panel</a>
        <% } %>

        <a class="btn btn-light text-dark fw-semibold btn-sm" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
        <a class="btn btn-light text-dark fw-semibold btn-sm" href="/signup">Sign Up</a>
      <% } %>
    </div>
  </div>
</nav>

<!-- ðŸŒ¼ Toast / Alert Feedback Area -->
<main class="container my-4">
  <% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <%- body %>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
